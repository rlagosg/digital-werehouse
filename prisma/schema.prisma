generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScanDetails {
  id             String @id @default(uuid())
  scanEntryDate  DateTime
  scanExitDate   DateTime
  observations   String

  Folder   Folders[]
  Document Documents[]
}

model Folders {
  id            String @id @default(uuid())
  name          String @unique
  description   String?
  year          Int
  folderType    FoldersTypes

  scanDetails   ScanDetails  @relation(fields: [scanDetailsId], references: [id])
  scanDetailsId String

  VoucherFolder VoucherFolders[]
}

model VoucherFolders {
  id           String @id @default(uuid())
  folder       Folders @relation(fields: [folderId], references: [id])
  folderId     String
  month        Int
  firstVoucher Int
  lastVoucher  Int

  Voucher Vouchers[]
}

model Documents {
  id            String @id @default(uuid())
  scanDetails   ScanDetails @relation(fields: [scanDetailsId], references: [id])
  scanDetailsId String
  description   String?
  pages         Int
  pdfPath       String
  documentType  FoldersTypes

  Voucher Vouchers[]
}

model Banks {
  id              String @id @default(uuid())
  name            String
  account         String
  internalAccount String?

  Voucher Vouchers[]
}

model Vouchers {
  id            String        @id @default(uuid())
  check         Int

  folder        VoucherFolders @relation(fields: [folderId], references: [id])
  folderId      String
  document      Documents      @relation(fields: [documentId], references: [id])
  documentId    String
  bank          Banks         @relation(fields: [bankId], references: [id])
  
  bankId        String
  checkDate     DateTime
  checkValue    Float
  beneficiary   String
  proyects      String
  isNull        Boolean
  nullDate      DateTime?
}

enum FoldersTypes {
  voucher
}