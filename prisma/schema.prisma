generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ScanDetails {
  id             String @id @default(uuid())
  scanEntryDate  DateTime
  scanExitDate   DateTime
  observations   String

  Folder   Folder[]
  Document Document[]
}

model Folder {
  id            String @id @default(uuid())
  name          String @unique
  description   String
  year          Int
  folderType    FoldersTypes

  scanDetails   ScanDetails  @relation(fields: [scanDetailsId], references: [id])
  scanDetailsId String

  VoucherFolder VoucherFolder[]
}

model VoucherFolder {
  id           String @id @default(uuid())
  folder       Folder @relation(fields: [folderId], references: [id])
  folderId     String
  month        Int
  firstVoucher Int
  lastVoucher  Int

  Voucher Voucher[]
}

model Document {
  id            String @id @default(uuid())
  scanDetails   ScanDetails?  @relation(fields: [scanDetailsId], references: [id])
  scanDetailsId String
  description   String
  pages         Int
  pdfPath       String
  documentType  FoldersTypes

  Voucher Voucher[]
}

model Bank {
  id              String @id @default(uuid())
  name            String
  account         String
  internalAccount String

  Voucher Voucher[]
}

model Voucher {
  id            String        @id @default(uuid())
  check         Int
  folder        VoucherFolder @relation(fields: [folderId], references: [id])
  folderId      String
  document      Document      @relation(fields: [documentId], references: [id])
  documentId    String
  bank          Bank          @relation(fields: [bankId], references: [id])
  bankId        String
  checkDate     DateTime
  checkValue    Float
  beneficiary   String
  proyects      String
  isNull        Boolean
  nullDate      DateTime?
}

enum FoldersTypes {
  voucher
}